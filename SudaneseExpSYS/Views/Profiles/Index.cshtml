@model IEnumerable<SudaneseExpSYS.Models.Profile>

@{
    ViewData["Title"] = "Index";

}

@if (TempData["AlertAdd"] != null)
{
    <script src="~/sweetalert2/sweetalert2.all.min.js"></script>
    <script type="text/javascript">
        Swal.fire({
            title: "نجحت العملية !",
            text: "تمت الإضافة بنجاح!",
            icon: "success"
        });
    </script>
}
@if (TempData["AlertEdit"] != null)
{
    <script src="~/sweetalert2/sweetalert2.all.min.js"></script>
    <script type="text/javascript">
        Swal.fire({
            title: "نجحت العملية !",
            text: "تمت التعديل بنجاح!",
            icon: "success"
        });
    </script>
}
@if (TempData["AlertDelete"] != null)
{
    <script src="~/sweetalert2/sweetalert2.all.min.js"></script>
    <script type="text/javascript">
        Swal.fire(
            'نجحت العملية',
            'تم الحذف بنجاح',
            'error'
        )
    </script>
}


<div class="title-header">
    <h4 class="d-flex justify-content-center "><i class="mx-2 my-auto fa fa-user-graduate"> @SudaneseExpSYS.Resourses.Resource.Expert</i></h4>
</div>
<br />

<div style="margin-bottom:20px" align="center">
    <input type="text" name="search" placeholder="@SudaneseExpSYS.Resourses.Resource.Search" class="form-control" style="width: 300px; margin-bottom: 10px" />
    <input type="submit" name="submit" value="@SudaneseExpSYS.Resourses.Resource.Search" class="btn btn-outline-primary" />
</div>
<a asp-action="Create" class="btn btn-info">@SudaneseExpSYS.Resourses.Resource.Create</a>
<br />
<br />
<div class="table-responsive">
    <table class="table table-border table-hover border" dir="rtl" id="sortedtable">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayName(@SudaneseExpSYS.Resourses.Resource.Name)
                </th>
               @*  <th>
                    @Html.DisplayName(@SudaneseExpSYS.Resourses.Resource.NationalId)
                </th> *@
               @*  <th>
                    @Html.DisplayName(@SudaneseExpSYS.Resourses.Resource.Sex)
                </th>
                <th>
                    @Html.DisplayName(@SudaneseExpSYS.Resourses.Resource.BrithDay)
                </th> *@
                <th>
                    @Html.DisplayName(@SudaneseExpSYS.Resourses.Resource.Phone)
                </th>
                <th>
                    @Html.DisplayName(@SudaneseExpSYS.Resourses.Resource.Email)
                </th>
               @*  <th>
                    @Html.DisplayName("الموطن الاصلي")
                </th>
                <th>
                    @Html.DisplayName("البلد الحالي")
                </th>*@
                <th>
                    @Html.DisplayName(@SudaneseExpSYS.Resourses.Resource.FName)
                </th>
                
               @*  <th>
                    @Html.DisplayName(@SudaneseExpSYS.Resourses.Resource.Achievement)
                </th> *@
                <th>
                    @Html.DisplayName(@SudaneseExpSYS.Resourses.Resource.dbImage)
                </th>
               
                <th>
                    @SudaneseExpSYS.Resourses.Resource.Control
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                   @*  <td>
                        @Html.DisplayFor(modelItem => item.NationalId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sex)
                    </td> 
                    <td>
                        @item.BrithDay.ToShortDateString()
                    </td> *@
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                   @*  <td>
                        @Html.DisplayFor(modelItem => item.state)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Filed)
                    </td> 
                   
                   @*  <td>
                        @Html.DisplayFor(modelItem => item.Achievement)
                    </td> *@
                    @* <td>
                        @Html.DisplayFor(modelItem => item.imageSrc)
                    </td> *@
                    <td> 
                        <img src="@item.imageSrc" style="height:60px" />
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success"><i class="fa fa-pencil-alt"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="fa fa-list"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>


